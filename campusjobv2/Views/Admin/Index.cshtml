@model CampusJobs.Models.AdminViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    ViewData["HeaderType"] = "Admin";
    Layout = "_Layout";
}

<text class="subheader">
    Admin Dashboard
    <br><br>
    <input type="text" class="filterbar" id="filterInput" onkeyup="filterTable()" placeholder="Search">
</text>

<div class="container">
    <div class="box">
        <input type="radio" class="tab-toggle" name="tab-toggle" id="tab1" checked>
        <input type="radio" class="tab-toggle" name="tab-toggle" id="tab2">

        <ul class="tab-list">
            <li class="tab-item">
                <label class="tab-trigger" for="tab1">Audit Board</label>
            </li>
            <li class="tab-item">
                <label class="tab-trigger" for="tab2">Student Account Creation</label>
            </li>
        </ul>

        <div class="tab-container">
            <!-- Audit Board Tab -->
            <div class="tab-content">
                <table id="Timesheets" class="table-container">
                    <tr>
                        <th class="thhead">Shift ID</th>
                        <th class="thhead">Student ID</th>
                        <th class="thhead">Student Name</th>
                        <th class="thhead">Recruiter</th>
                        <th class="thhead">Date</th>
                        <th class="thhead">Duration</th>
                        <th class="thhead">Status</th>
                    </tr>

                    @foreach (var audit in Model.AuditBoard)
                    {
                        <tr>
                            <td>@audit.ShiftId</td>
                            <td>@audit.StudentId</td>
                            <td>@audit.StudentName</td>
                            <td>@audit.Recruiter</td>
                            <td>@audit.Date.ToShortDateString()</td>
                            <td>@audit.Duration</td>
                            <td>@audit.Status</td>
                        </tr>
                    }
                </table>
            </div>

            <!-- Student Account Creation Tab -->
            <div class="tab-content">
                <div class="form-container">
                    <h3>Create Student Account</h3>
                    <form asp-action="CreateStudentAccount" method="post">
                        <div class="form-group">
                            <input placeholder="Student ID" type="text" class="form-control" id="StudentId" name="studentId" required>
                        </div>
                        <div class="form-group">
                            <input placeholder="Name" type="text" class="form-control" id="Name" name="name" required>
                        </div>
                        <div class="form-group">
                            <input placeholder="Email" type="email" class="form-control" id="Email" name="email" required>
                        </div>
                        <div class="form-group">
                            <input placeholder="Department" type="text" class="form-control" id="Department" name="department" required>
                        </div>
                        <div class="form-group">
                            <label for="VisaRestricted">Visa Restricted</label>
                            <select class="form-control" id="VisaRestricted" name="visaRestricted" required>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Account</button>
                    </form>
                </div>
                <br>
            </div>
        </div>
    </div>
</div>
